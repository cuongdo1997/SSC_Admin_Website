@model SSC_Admin_Website.Models.MatHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "MatHangs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>MatHang</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaMH)

        <div class="form-group">
            @Html.LabelFor(model => model.TenMH, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenMH, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
                @Html.ValidationMessageFor(model => model.TenMH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SoLuongTon, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="btn btn-outline-secondary" id="SetSLTonNull">Không có số lượng</div>
                <input type="number" min="0" value="@Model.SoLuongTon" name="SoLuongTon" id="SoLuongTon" class="form-control" />
                <p class="text-danger" id="Validate_SoLuongTon"></p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DonGia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaDV, "MaDV", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaDV", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaDV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TrangThai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.TrangThai) Còn hàng
                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Hình ảnh hiện tại</label>
            <div class="col-md-10">
                <div id="btnClearImage" class="btn btn-outline-secondary form-control" style="max-width:280px;">Clear</div>
                @if (Model.ImageMH != null)
                {
                    var base64 = Convert.ToBase64String(Model.ImageMH);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                    <input type="hidden" id="isClear" name="isClear" value="false" />
                    <img id="imgNow" class="img-responsive" src="@imgsrc" style="max-width:200px;">
                }
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Hình ảnh mới</label>
            <div class="col-md-10">
                <input type="file" name="HinhAnh" class="form-control-file" onchange="previewFile()" />
                <img src="" id="preview" height="200" alt="Image preview...">
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $("#btnClearImage").click(function () {
                $("#HinhAnh").val(null);
                $("#imgNow").prop("src", null);
                $("#imgNow").prop("alt", "");
                $("#isClear").val(true);
            });
            $("#SetSLTonNull").click(function () {
                $("#SoLuongTon").val(null);
            });
        });

        function previewFile() {
            var preview = document.querySelector('#preview');
            var file = document.querySelector('input[type=file]').files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.src = "";
            }
        }
    </script>
}
