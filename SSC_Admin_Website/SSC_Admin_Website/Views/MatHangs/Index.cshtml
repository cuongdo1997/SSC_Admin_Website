@using PagedList.Mvc;
@using PagedList;
@model IPagedList<SSC_Admin_Website.Models.V_MatHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên mặt hàng
        </th>
        <th>
            Số lượng tồn
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Tên đơn vị
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            Hình ảnh
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.TenMH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoLuongTon)
    </td>
    <td>
        @string.Format("{0:N0}", item.DonGia)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenDV)
    </td>
    <td>
        @if (item.TrangThai == true)
        {
            <text>Còn hàng</text>
        }
        else
        {
            <text>Hết hàng</text>
        }
    </td>
    <td>
        @if (item.ImageMH != null)
        {
            var base64 = Convert.ToBase64String(item.ImageMH);
            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
            <img class="img-responsive" src="@imgsrc" style="max-width:200px;">
        }
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MaMH }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MaMH })
    </td>
</tr>
    }

</table>
