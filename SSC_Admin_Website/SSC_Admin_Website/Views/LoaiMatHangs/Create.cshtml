@model SSC_Admin_Website.Models.LoaiMatHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Create</h2>


@using (Html.BeginForm("Create", "LoaiMatHangs", FormMethod.Post, new { enctype="multipart/form-data"})) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Loại mặt hàng</h4>
        <hr />
        <div class="form-group">
            <label for="TenLMH" class="col-md-2">Tên loại mặt hàng</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLMH, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
                <p class="text-danger">@ViewBag.Validate_TenLMH</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Hình ảnh</label>
            <div class="col-md-10">
                <input type="file" name="HinhAnh" class="form-control-file" onchange="previewFile()" />
                <img src="" id="preview" height="200" alt="Image preview...">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        function previewFile() {
            var preview = document.querySelector('#preview');
            var file = document.querySelector('input[type=file]').files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.src = "";
            }
        }
    </script>
}
