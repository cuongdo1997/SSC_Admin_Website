@model SSC_Admin_Website.Models.HinhThuc_ThanhToan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "HinhThuc_ThanhToans", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Hinh thuc thanh toan</h4>
        <hr />
        @Html.HiddenFor(model => model.MaHTTT)

        <div class="form-group">
            <label for="TenLMH" class="col-md-2">Tên HTTT</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenHTTT, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
                <p class="text-danger">@ViewBag.Validate_TenLMH</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Hình ảnh hiện tại</label>
            <div class="col-md-10">
                <div id="btnClearImage" class="btn btn-outline-secondary form-control" style="max-width:280px;">Clear</div>
                @if (Model.ImageHTTT != null)
                {
                    var base64 = Convert.ToBase64String(Model.ImageHTTT);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                    <input type="hidden" id="isClear" name="isClear" value="false" />
                    <img id="imgNow" class="img-responsive" src="@imgsrc" style="max-width:200px;">
                }
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Hình ảnh mới</label>
            <div class="col-md-10">
                <input type="file" name="HinhAnh" class="form-control-file" onchange="previewFile()" />
                <img src="" id="preview" height="200" alt="Image preview...">
            </div>
        </div>

        <div class="form-group"> 
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-outline-warning" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>$(document).ready(function () {
            $("#btnClearImage").click(function () {
                $("#HinhAnh").val(null);
                $("#imgNow").prop("src", null);
                $("#imgNow").prop("alt", "");
                $("#isClear").val(true);
            });
        });

        function previewFile() {
            var preview = document.querySelector('#preview');
            var file = document.querySelector('input[type=file]').files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.src = "";
            }
        }</script>
}
