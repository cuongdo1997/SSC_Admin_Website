@model SSC_Admin_Website.Models.KIOSK

@{
    ViewBag.Title = "Thêm KIOSK";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
</div>

<h2>Create</h2>


@using (Html.BeginForm("Create", "KIOSKs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>KIOSK</h4>
        <hr />
        <div class="form-group">
            <label class="col-md-2">Mã KIOSK</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MAKO, new { htmlAttributes = new { @class = "form-control", maxlength = "18", required = "required", autofocus = "autofocus" } })
                @if (ViewBag.Validate_MaKO != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Validate_MaKO
                    </div>
                }
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Tên KIOSK</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenKO, new { htmlAttributes = new { @class = "form-control", maxlength = "100" } })
                @if (ViewBag.Validate_TenKO != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Validate_TenKO
                    </div>
                }
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Ngày xây dựng</label>
            <div class="col-md-10">
                <input type="date" name="NgayXD" for="NgayXD" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Ngày vận hành</label>
            <div class="col-md-10">
                <input type="date" name="NgayVH" for="NgayVH" class="form-control" />
            </div>
        </div>

        @if (ViewBag.Validate_Ngay != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Validate_Ngay
            </div>
        }

        <div class="form-group">
            <label class="col-md-2">Địa điểm</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaDiem, new { htmlAttributes = new { @class = "form-control", maxlength = "100" } })
                @if (ViewBag.Validate_DiaDiem != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Validate_DiaDiem
                    </div>
                }
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Trạng thái KIOSK</label>
            <div class="col-md-10">
                <div class="checkbox">
                    <input type="checkbox" id="TrangThaiKo" name="TrangThaiKo" class="form-check-inline" value="true">
                    <label for="TrangThaiKo" class="form-check-label">Đang hoạt động</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Hình banner</label>
            <div class="col-md-10">
                <input type="file" name="fImageBanner" class="form-control-file" onchange="previewFile()" />
                <img src="" height="200" alt="Image preview...">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Connect string</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ConnectStr, new { htmlAttributes = new { @class = "form-control", maxlength = "200" } })
                @if (ViewBag.Validate_ConnectStr != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Validate_ConnectStr
                    </div>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=" Create" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function () {

        });

        function previewFile() {
            var preview = document.querySelector('img');
            var file = document.querySelector('input[type=file]').files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.src = "";
            }
        }
    </script>
}
