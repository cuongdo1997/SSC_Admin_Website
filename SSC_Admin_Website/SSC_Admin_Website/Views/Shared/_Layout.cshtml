<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <!-- Brand -->
        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("KIOSK", "Index", "KIOSKs", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Tài khoản admin", "Index", "TaiKhoanAdmins", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Quảng cáo", "Index", "QuangCaos", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Cài đặt", "Index", "Configs", null, new { @class = "nav-link" })
            </li>

            <!-- Dropdown -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                    QL bán hàng
                </a>
                <div class="dropdown-menu">
                    @Html.ActionLink("Loại mặt hàng", "Index", "LoaiMatHangs", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Đơn vị mặt hàng", "Index", "DonVi_MatHangs", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Mặt hàng", "Index", "MatHangs", null, new { @class = "dropdown-item" })
                </div>
            </li>
        </ul>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
