@model SSC_Admin_Website.Models.DonVi_MatHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
</div>

<h2 class="text-center">Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Đơn vị mặt hàng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-md-2">Tên đơn vị</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDV, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
                <p class="text-center">@ViewBag.Validate_TenDV</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Loại mặt hàng</label>
            <div class="col-md-10">
                @Html.DropDownList("MALMH", null, htmlAttributes: new { @class = "form-control" })
                <p class="text-center">@ViewBag.Validate_MALMH</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
